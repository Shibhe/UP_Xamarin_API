<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:UP_Xamarin"
             x:Class="UP_Xamarin.MainPage">

    <StackLayout Padding="60,60">
        <Label Text="Welcome to UP!" 
           VerticalOptions="Center" 
           HorizontalOptions="Center"
           BackgroundColor="Black"
           TextColor="White"/>
        <Button Text="Click here to Apply" TextColor="Black" BackgroundColor="CornflowerBlue" VerticalOptions="Center" 
           HorizontalOptions="Center" Clicked="OnClickApply"/>
    </StackLayout>
</ContentPage>